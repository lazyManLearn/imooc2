extends ../layout
block content
   form.form-horizontal.center-block(method="POST",action="/admin/user/update",style="width: 600px;")
      input(type="hidden",name="user[_id]",value="#{user._id}")
      .form-group
         label.control-label.col-sm-3 用户名
         .col-sm-8
            input.form-control(name="user[name]",type="text",value="#{user.name}",readonly)
      .form-group
         label.control-label.col-sm-3 密码
         .col-sm-8
            input.form-control(name="user[password]",type="password")
      .form-group
         .col-sm-offset-3.col-sm-8
            button.btn.btn-primary(type="submit") 修改

