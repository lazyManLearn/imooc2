extends ../layout
block content
    .container
        .row
            form.form-horizontal#movie(method="post",action="/admin/movie/new",enctype="multipart/form-data")
                if movie._id
                    input(type="hidden",name="movie[_id]",value=movie._id)
                .form-group
                    label.col-sm-3.control-label 豆瓣同步
                    .col-sm-9
                        input#douban.form-control(type="text")
                .form-group
                    label.col-sm-3.control-label 电影分类
                    .col-sm-9
                        input.form-control(type="text",name="movie[categoryName]")
                .form-group
                    label.col-sm-3.control-label 分类选择
                    .col-sm-9
                        each cat in categories
                            label.radio-inline
                                if movie._id
                                    input(type="radio",name="movie[category]",value="#{cat._id}",checked=cat._id.toString()==movie.category.toString())
                                    | #{cat.name}
                                else
                                    input(type="radio",name="movie[category]",value="#{cat._id}")
                                    | #{cat.name}
                .form-group
                    label.col-sm-3.control-label 电影名字
                    .col-sm-9
                        input.form-control(type="text",name="movie[title]",value=movie.title)
                .form-group
                    label.col-sm-3.control-label 电影导演
                    .col-sm-9
                        input.form-control(type="text",name="movie[doctor]",value=movie.doctor)
                .form-group
                    label.col-sm-3.control-label 国家
                    .col-sm-9
                        input.form-control(type="text",name="movie[country]",value=movie.country)
                .form-group
                    label.col-sm-3.control-label 语种
                    .col-sm-9
                        input.form-control(type="text",name="movie[language]",value=movie.language)
                .form-group
                    label.col-sm-3.control-label 海报地址
                    .col-sm-9
                        input.form-control(type="text",name="movie[poster]",value=movie.poster)
                .form-group
                    label.col-sm-3.control-label 海报上传
                    .col-sm-9
                        input.form-control(type="file",name="uploadPoster")
                .form-group
                    label.col-sm-3.control-label 片源地址
                    .col-sm-9
                        input.form-control(type="text",name="movie[flash]",value=movie.flash)
                .form-group
                    label.col-sm-3.control-label 上映年代
                    .col-sm-9
                        input.form-control(type="text",name="movie[year]",value=movie.year)
                .form-group
                    label.col-sm-3.control-label 电影简介
                    .col-sm-9
                        textarea.form-control(name="movie[summary]") !{movie.summary}
                .form-group
                    .col-sm-offset-3.col-sm-9
                        button.btn.btn-default(type="submit") 录入
    script(src="/js/movie.js")