extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                  tr
                    th 名字
                    th 时间
                    th 修改
                    th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                          td.username #{item.name}
                          td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                          td: a(target="_blank",href="../user/update/#{item._id}") 修改
                          if item.role<50
                              td: button.btn.btn-danger.del(type="button",data-id="#{item._id}",data-toggle="modal",data-target="#messageModal") 删除
                          else
                              td: button.btn.btn-danger.del(type="button",data-id="#{item._id}",disabled) 删除

    script(src="/js/user.js")