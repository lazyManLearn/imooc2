.container
   .row
      .page-header.clearfix
         h1 #{title}
         .col-md-4
            small 重度科幻电影
         .col-md-8
            form(method='GET',action='/results')
               .input-group.col-sm-push-8.col-sm-4
                  input.form-control(type='text',name='q')
                  span.input-group-btn
                      button.btn.btn-default(type='submit') 搜索

.navbar.navbar-default.navbar-fixed-bottom
   .container
      .navbar-header
         a.navbar-brand(href="/") 重度科幻迷
      if user
         .p.navbar-text.navbar-right
            span 欢迎您,#{user.name}
            span &nbsp;|&nbsp;
            a.navbar-link(href="/user/logout") 退出
      else
         .p.navbar-text.navbar-right
            a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
            span &nbsp;|&nbsp;
            a.navbar-link(href="#",data-toggle="modal",data-target="#loginModal") 登录

#signupModal.modal.fade
   .modal-dialog
      .modal-content
         form.form-horizontal(method="POST",action="/user/signup")
            .modal-header
               button.close(type="button",data-dismiss="modal") &times;
               h4.modal-title 注册
            .modal-body
               .form-group
                  label.control-label.col-sm-3 用户名
                  .col-sm-8
                      input.form-control(name="user[name]",type="text")
               .form-group
                  label.control-label.col-sm-3 密码
                  .col-sm-8
                      input.form-control(name="user[password]",type="password")
            .modal-footer
               button.btn.btn-primary(type="submit") 提交
               button.btn.btn-default(type="button",data-dismiss="modal") 关闭
#loginModal.modal.fade
   .modal-dialog
      .modal-content
         form.form-horizontal(method="POST",action="/user/signin")
            .modal-header
               button.close(type="button",data-dismiss="modal") &times;
               h4.modal-title 登录
            .modal-body
               .form-group
                  label.control-label.col-sm-3 用户名
                  .col-sm-8
                     input.form-control(name="user[name]",type="text")
               .form-group
                  label.control-label.col-sm-3 密码
                  .col-sm-8
                     input.form-control(name="user[password]",type="password")
            .modal-footer
               button.btn.btn-primary(type="submit") 提交
               button.btn.btn-default(type="button",data-dismiss="modal") 关闭
#messageModal.modal.fade
   .modal-dialog
      .modal-content
         .modal-header
            button.close(type="button",data-dismiss="modal") &times;
            h4.modal-title 消息
         .modal-body
            p 消息体
         .modal-footer
            button.btn.btn-primary.confirm(type="button") 确定
            button.btn.btn-default(type="button",data-dismiss="modal") 关闭
